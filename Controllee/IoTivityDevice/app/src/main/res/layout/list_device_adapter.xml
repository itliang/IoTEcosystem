<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingBottom="15dp"
    android:paddingTop="17dp">
    <ImageView
        android:id="@+id/rvc_item_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/selector_rvc_icon_bg"
        android:tint="@color/selector_icon_img_color"
        android:tintMode="src_in" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="18dp">

        <TextView
            android:id="@+id/list_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="4dp"
            android:paddingLeft="6dp"
            android:textColor="@color/selector_list_item_title_color"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/list_item_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="4dp"
            android:paddingLeft="6dp"
            android:textColor="@color/selector_list_item_subtitle_color"
            android:textSize="14sp"/>

    </LinearLayout>
    <ImageView
        android:id="@+id/list_item_indicator"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/selector_list_item_indicator"
        android:visibility="gone" />

    <Switch
        android:id="@+id/list_item_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:visibility="gone" />

</LinearLayout>