<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_selected="true">
        <shape android:shape="oval">
            <solid android:color="@color/colorCircleButtonBGSelected" />
        </shape>
    </item>
    <item  android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/colorCircleButtonBGPressed" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="false" android:state_selected="false">
        <shape android:shape="oval">
            <solid android:color="@color/colorCircleButtonBGNormal" />
        </shape>
    </item>
</selector>